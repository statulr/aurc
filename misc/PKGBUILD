# Maintainer: Statulr

pkgname=aurc
pkgenv=aurc
pkgver=1.1.9
pkgrel=1
pkgdesc="Fast Easy way to Install and Update Aur and Non-Aur Arch Linux Packages!"
PACKAGER=statulr

arch=('i686' 'pentium4' 'x86_64' 'arm' 'armv7h' 'armv6h' 'aarch64' 'riscv64')
url="https://github.com/statulr/aurc"
license=('GPL3')
depends=(
  'less'
  'pacman'
)
optdepends=(
  'sudo: privilege elevation'
)
source=("${pkgenv}-${pkgver}.tar.gz::https://github.com/runaurc/core/archive/${pkgver}.tar.gz")
sha256sums=('ba60f1043fb50e65d461ce8c076d54997f05df6220d8802f0319857f2a3fd17e') # needs to update the sha256sum for every git archive ${pkgver} tarball from ${source}

build() {
  cd ${pkgenv}-${pkgver}/src
  make build
}

package() {
  cd ${pkgenv}-${pkgver}/src
  install -Dm755 build/${pkgname} "$pkgdir/usr/bin/${pkgname}"
  cd ${srcdir}/${pkgenv}-${pkgver}
  install -Dm644 LICENSE "$pkgdir"/usr/share/licenses/"${pkgname}"/LICENSE
}
